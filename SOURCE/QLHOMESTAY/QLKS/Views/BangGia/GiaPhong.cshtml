@model IEnumerable<QLKS.Models.tblLoaiPhong>

@{
    ViewBag.Title = "Giá Phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .thumb {
        width: 400px;
        height: 300px;
        background-color: transparent;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .card {
        margin-bottom: 30px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        margin-bottom: 10px;
        font-size: 18px;
        font-weight: bold;
    }

    .card-text {

        font-size: 23px;
        
    }
</style>

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<br />
<br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i style='font-size: 50px; color: #47a8d88f ' class='fas'>&#xf6c3;</i> Bảng giá Phòng</h3>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        @{
                            string m = (item.anh);
                            try
                            {
                                List<string> a = Newtonsoft.Json.JsonConvert.DeserializeObject<List<string>>(m);
                                <img src="@a[0]" class="card-img-top" alt="Ảnh">
                            }
                            catch { }
                        }
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.mo_ta)</h5>
                            <p class="card-text">Giá/Đêm: @Html.DisplayFor(modelItem => item.gia) VND</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

        <div id="slider"></div>

        <script>
            function clickImg(id) {
                $.ajax({
                    url: "/Home/Slider/" + id,
                    type: "GET",
                    success: function (data) {
                        $("#slider").html(data);
                    }
                });
            }
        </script>
